<%= link_to "Home", root_path %>
<div>
<h1><%= @roadmap.title %></h1><br>
<h3><%= @roadmap.skill.name %> < <%=@roadmap.skill.category.name %></h3><br>
<%= image_tag @roadmap.image(:medium) %><br>
<%= @roadmap.description %><br>
<% @roadmap.resources.each do |resource| %>
  <%= link_to resource.name, roadmap_resource_path(@roadmap, resource) %> <br>
<% end %>
</div>
<br>
<%= link_to "Add Resource", new_roadmap_resource_path(@roadmap) %><br>
<%= link_to "Edit", edit_roadmap_path(@roadmap) %><br>
<%= link_to "Delete", roadmap_path(@roadmap), method: :delete %>