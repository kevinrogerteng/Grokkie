<%= link_to "Home", root_path %>
<%= simple_form_for (@roadmap) do |f| %>
      <%= f.association :skill %>
	  <%= f.input :title, as: :string %><br>
	  <%= f.input :description, as: :text %><br>
    <!-- paperclip -->
    <%= f.label :image %>
    <%= f.file_field :image %><br>
    <!-- paperclip -->
	  <%= f.button :submit %>
 <% end %>

 <% @roadmap.resources.each do |resource| %>
   <%= resource.name %><br>
   <%= resource.url %><br>
   <%= resource.description %><br>
   <%= link_to "Edit", edit_roadmap_resource_path(@roadmap, resource.id) %>
   <%= link_to "Delete", roadmap_resource_path(@roadmap, resource.id), method: :delete %>
<% end %>