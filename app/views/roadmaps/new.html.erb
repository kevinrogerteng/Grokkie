<div class="new_roadmap_wrapper">

  <div class="row" id="home_link">
    <div class="small-2 medium-6 large-6 columns">
    <%= link_to "Home", root_path %>
    </div>
    <div class="hide-for-small medium-12 medium-centered large-12 large-centered columns">
      <h5>Create a new roadmap</h5>
    </div>
  </div>

  <div class="small-10 medium-8 medium-centered large-8 large-centered columns">
      <%= simple_form_for (@roadmap), html: { class: 'new_roadmap_form' } do |f| %>
      	  <%= f.input :title, as: :string, :placeholder=> "Name your Roadmap" %>
      	  <%= f.input :description, as: :text, :placeholder=> "Description" %>
          <%= f.association :skill, prompt: "Specify a skill" %>
          <div id="mobile_bar"></div>
      	  <%= f.button :submit, value: "Create" %>
       <% end %>
  </div>
</div>