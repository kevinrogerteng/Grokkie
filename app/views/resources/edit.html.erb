<%= link_to "Home", root_path %>
<%= simple_form_for [@roadmap, @resource] do |f| %>
	  <%= f.input :name, as: :string %><br>
	  <%= f.input :url, as: :string %><br>
	  <%= f.input :description, as: :text %><br>
    <!-- paperclip -->
    <%= f.label "Upload an image of your notes or whiteboard:" %>
    <%= f.file_field :image %><br>
    <%= f.label "Upload a file (e.g. pdf, doc, txt, md)" %>
    <%= f.file_field :attachment %><br>
    <!-- paperclip -->
	  <%= f.button :submit %>
<% end %>