<div class="login_wrapper">
  <div class="row">
    <div class="small-9 small-centered medium-5 medium-centered large-4 large-centered columns login_form">
      <div class="row">
        <div class="small-10 medium-10 large-10 columns">
        <h3>Create an account</h3>
        </div>
        <%= link_to root_path do %><i class="fa fa-home fa-lg"></i><% end %>
        <i class="fa fa-cog fa-lg"></i>
      </div>
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
          <%= f.input :email, :required => true, :autofocus => true, :placeholder => "email"%>
          <%= f.input :username, :required => true, :autofocus => true, :placeholder => "username" %>
          <% if f.object.password_required? %>
          <%= f.input :password, :required => true, :placeholder => "password" %>
          <%= f.input :password_confirmation, :required => true, :placeholder => "password confirmation" %>
          <% end %>
          <div class="row">
            <div class="small-2 medium-2 large-2 columns">
            </div>
            <div class="small-12 medium-10 large-8 columns sign_in white button-small">
              <%= f.button :submit, "Sign up" %><span><i class="fa fa-power-off"></i></span>
            </div>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
